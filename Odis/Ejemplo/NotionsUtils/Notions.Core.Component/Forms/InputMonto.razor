@using Microsoft.AspNetCore.Components.Forms

<InputText class="form-control money" @bind-Value="@montoPreFormat" placeHolder="CUIT / CUIL"></InputText>

@code{

    string montoPreFormat;
    decimal montoFinal;


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await _JS.InvokeVoidAsync("initMoneyInputs");
        }
    }

    public decimal GetValue()
    {
        montoFinal = decimal.Parse(montoPreFormat.Replace(".", ""));
        return montoFinal;
    }
}