@page "/Perfil"

@using Microsoft.AspNetCore.Authorization
@attribute [StreamRendering]
@rendermode InteractiveServer
@attribute [Authorize]

<div class="block-header">
    <div class="row clearfix">
        <a href="Index" style="margin-left:10px;" class="my-auto">
            <i class="zmdi zmdi-arrow-left font-32 mr-2"></i>
        </a>
        <div class="col-lg-11 col-md-11 col-sm-11">
            <h2>MI PERFIL CIUDADANO</h2>
            <ul class="breadcrumb padding-0">
                <li class="breadcrumb-item">
                    <a href="Index"><i class="zmdi zmdi-home"></i></a>
                </li>
                <li class="breadcrumb-item active">Mis perfil</li>
            </ul>
        </div>
    </div>
</div>

<div class="row clearfix">

    <div class="col-lg-6">

        <div class="card">

            <div class="body">
                <small class="text-muted">DNI: </small>
                <p>@VecinoModel.DNI.ToString()</p>
                <hr>
                <small class="text-muted">Email: </small>
                @if (LoginModel.Email == "")
                {
                    <p style="color:">No hay un email registrado</p>
                }
                else
                {
                    <p>@LoginModel.Email</p>
                }

                <hr>
                <small class="text-muted">Celular: </small>
                <p>@VecinoModel.PrefijoCelular @VecinoModel.Celular</p>
                <hr>
                <small class="text-muted">Dirección postal: </small>
                <p> @VecinoModel.Calle&nbsp;@VecinoModel.Altura, @VecinoModel.Localidad. @VecinoModel.CP</p>
                <hr>
                <small class="text-muted">Fecha de nacimiento: </small>
                @if(VecinoModel.FechaNac.ToString("dd/MM/yyyy") == "01/01/1900")
                {
                    <p class="m-b-0">Sin dato</p>
                }
                else
                {
                    <p class="m-b-0">@VecinoModel.FechaNac.ToString("dd.MM.yyyy")</p>
                }
                
                <hr />

            </div>

            <div class="row mt-2">

                <div class="col-lg-12" style="text-align:center">
                    <a href="PerfilEdit" class="btn btn-primary btn-round">Editar mis datos</a>
                </div>

            </div>


        </div>


    </div>

</div>