@typeparam TItem
@if (Visible)
{
    <div class="modal-backdrop fade show" style="z-index: 1040;"></div>
    <div class="modal fade show d-block" tabindex="-1" role="dialog" aria-modal="true" style="z-index: 1050;">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header d-block">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="modal-title fw-bold">@Titulo</h5>
                            <small class="text-muted">@Subtitulo</small>
                        </div>
                        <button type="button" style="background: none; border: none; box-shadow: none; padding: 0;" class="btn-close" @onclick="CerrarModal"><i class="fa-solid fa-xmark"></i></button>
                    </div>
                </div>
                <div class="modal-body">
                    @if (TieneDatos())
                    {
                        <table class="table table-hover table-responsive">
                            <thead class="table-light">
                                @if (Header != null)
                                {
                                    @Header
                                }
                            </thead>
                            <tbody>
                                @if (UsarDataTable)
                                {
                                    @RenderDataTableRows()
                                }
                                else if (UsarSingleRow)
                                {
                                    <tr>
                                        @SingleRowTemplate(SingleDataRow)
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Items)
                                    {
                                        <tr>
                                            @RowTemplate(item)
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-center">@MensajeSinDatos</p>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary btn-round" @onclick="CerrarModal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}