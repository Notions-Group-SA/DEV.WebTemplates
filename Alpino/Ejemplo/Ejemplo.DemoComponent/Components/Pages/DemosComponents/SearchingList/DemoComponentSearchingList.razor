@page "/DemoComponentSearchingList"


@using System.Globalization
@using Ejemplo
@using Ejemplo.Components
@using Ejemplo.Components.SearchingList

@attribute [StreamRendering]
@rendermode InteractiveServer

<section class="content file_manager">

    <div class="container-fluid">

        <div class="block-header">
            <div class="row clearfix">
                <div class="col-lg-5 col-md-5 col-sm-12">
                    <h2>Documentos</h2>
                </div>
            </div>
        </div>

        <div class="row clearfix">

            <div class="col-md-8 col-12">

                <div class="card">

                    @foreach (var item in ListaPersonasFiltrada)
                    {
                        <div class="body">
                            <div class="row">
                                <div>@item.Nombre</div>
                            </div>
                        </div>
                    }

                </div>
            </div>

            <div class="col-md-4 col-12">
                <div class="row">

                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="input-group m-b-0">
                            <SearchingList T="PersonaViewModel"
                                           DataSource="ListaPersonas"
                                           DisplayProperty="Nombre"
                                           SecondaryProperty="Dni"
                                           PlaceholderText="Buscar persona..."
                                           OnFilteredResultsChanged="OnDataTableFiltered" />
                        </div>
                    </div>

                    <div class="card">
                        @foreach (var item in ListaPersonasFiltrada)
                        {
                            <div class="body mb-3">
                                <span class="input-group-addon"> <i class="zmdi zmdi-search"></i></span>
                                <div class="m-b-10">
                                    <h3>@item.Nombre</h3>
                                    <div class="text-muted">@item.Dni</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>

</section>

@code {
    string searchText;

    PersonaViewModel view = new();

    List<PersonaViewModel> ListaPersonas = new();
    List<PersonaViewModel> ListaPersonasFiltrada = new();

    protected override Task OnInitializedAsync()
    {
        ListaPersonas = GetByPersonas();
        ListaPersonasFiltrada = ListaPersonas;
        return base.OnInitializedAsync();
    }


    private async Task OnDataTableFiltered(IEnumerable<PersonaViewModel> filteredResults)
    {
        ListaPersonasFiltrada = filteredResults.ToList();
        StateHasChanged();
        await Task.CompletedTask;
    }

    #region viewModels
    class PersonaViewModel
    {
        public int Dni { get; set; }
        public string Nombre { get; set; }
    }
    #endregion

    #region ejemplos
